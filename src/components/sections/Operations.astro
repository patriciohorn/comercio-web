---
import { Image } from 'astro:assets';
import Map from '../../assets/map.svg';
const { title } = Astro.props;
---

<section class="py-28">
  <div class="max-w-screen-xl mx-auto px-4 py-8">
    <h2 class="mb-16 text-4xl md:text-5xl font-bold text-blue-950">
      {title}
    </h2>
    <Image
      src={Map}
      alt="World Map with selected countries"
      class="w-full object-cover aspect-auto"
    />
  </div>
</section>
